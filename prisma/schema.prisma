generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String @id @default(uuid())
  name          String
  caretakerName String
  address       String
  city          String
  zipCode       String
  phone         String
  email         String @unique
  passwordHash  String
  Pet           Pet[]

  @@map("organizations")
}

enum PetAge {
  BABY
  YOUNG
  ADULT
  SENIOR
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum PetEnergy {
  LOW
  MEDIUM
  HIGH
}

enum PetIndependency {
  LOW
  MEDIUM
  HIGH
}

enum PetEnvironment {
  INDOOR
  OUTDOOR
  BOTH
}

model Pet {
  id                   String          @id @default(uuid())
  name                 String
  about                String?
  age                  PetAge
  size                 PetSize
  energy               PetEnergy
  independency         PetIndependency
  environment          PetEnvironment
  images               String[]        @default([])
  adoptionRequirements String[]        @default([])

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@map("pets")
}
